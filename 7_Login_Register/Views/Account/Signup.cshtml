<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #b3d4fc, #d4b3fc);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .tab-button {
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
        }

            .tab-button.active {
                background: linear-gradient(90deg, #1a73e8, #4285f4);
                color: #fff;
            }

        .btn-login {
            background: linear-gradient(90deg, #1a73e8, #4285f4);
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 25px;
        }

            .btn-login:hover {
                background: linear-gradient(90deg, #4285f4, #1a73e8);
            }

        .forgot-link,
        .signup-link {
            text-decoration: none;
            font-size: 0.9rem;
        }

            .forgot-link:hover,
            .signup-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">Signup Form</div>
        <div class="d-flex justify-content-center mb-4">
           

            @Html.ActionLink("Signup", "Signup", "Account", null, new { @class = "btn btn-info rounded-pill" })
        </div>
        <form action="/Account/Signup" method="post">
            <div class="mb-3">
                <input type="email" name="email" class="form-control" placeholder="Email Address" required>
            </div>
            <div class="mb-3">
                <input type="text" name="username" class="form-control" placeholder="Username" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <div class="mb-3">
                <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password" required>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="#" class="forgot-link">Forgot password?</a>
            </div>
            <button type="submit" class="btn-login w-100">Signup</button>
            <div class="text-center mt-3">
                <span>Already have an account? </span>
                @Html.ActionLink("Login now", "Index", "Account", null, new { @class = "signup-link" })

            </div>
        </form>
        <span style="height:8px" class="btn"> @Html.ActionLink("Back To Page", "Index", "Account", null, new { @class = "btn btn-dark rounded-pill me-2 " })</span>

    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
